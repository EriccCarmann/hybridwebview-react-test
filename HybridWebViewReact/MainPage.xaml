<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ejl="clr-namespace:HybridWebView;assembly=HybridWebView"
             x:Class="HybridWebViewReact.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
           <ejl:HybridWebView
               HybridAssetRoot="wwwroot"
               MainFile="index.html"
               RawMessageReceived="Message"/>
           <Label x:Name="Label"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
